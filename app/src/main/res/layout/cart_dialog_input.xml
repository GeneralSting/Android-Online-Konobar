<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp">

    <NumberPicker
        android:id="@+id/cartDialogInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="16dp"
        android:scaleY="1.25"
        android:scaleX="1.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cartDialogAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/drink_add_button"
        android:text="@string/cart_dialog_positive_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartDialogInput" />

    <Button
        android:id="@+id/cartDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/drink_remove_button"
        android:text="@string/cart_dialog_negative_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartDialogInput" />

</androidx.constraintlayout.widget.ConstraintLayout>